<div x-data="{showControls: true}" class="h-full">
    <div>
        !ADMIN
    </div>

    <div class="absolute bottom-0 right-0 w-1/2 xl:w-1/3 max-h-1/2 border-t border-l border-gray-300 rounded-tl-md">
        <div @click="showControls = !showControls"
             class="text-center opacity-50 hover:opacity-100 cursor-pointer bg-gray-100">[open/close]
        </div>

        <div class="p-4" :class="{'hidden': !showControls}">
            !CONTROLS
        </div>
    </div>
</div>
